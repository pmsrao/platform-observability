# Platform Observability Environment Configuration
# Copy this file to .env and update the values for your environment

# Environment (dev/prod)
ENVIRONMENT=dev

# Databricks Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-personal-access-token
DATABRICKS_WORKSPACE_ID=your-workspace-id

# Catalog and Schema Configuration
CATALOG=platform_observability
BRONZE_SCHEMA=plt_bronze
SILVER_SCHEMA=plt_silver
GOLD_SCHEMA=plt_gold

# Processing Configuration
OVERLAP_HOURS=48
TIMEZONE=Asia/Kolkata

# Logging Configuration
LOG_LEVEL=INFO

# Monitoring Configuration
ENABLE_MONITORING=true
ENABLE_ALERTS=true

# Data Quality Configuration
DATA_QUALITY_ENABLED=true
DATA_QUALITY_STRICT_MODE=false

# Performance Configuration
AUTO_OPTIMIZE=true
AUTO_COMPACT=true

# Cost Thresholds (USD)
COST_ALERT_THRESHOLD=1000
COST_WARNING_THRESHOLD=500

# Data Freshness Thresholds (hours)
DATA_FRESHNESS_WARNING=24
DATA_FRESHNESS_ERROR=48

# Notification Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
TEAMS_WEBHOOK_URL=your-teams-webhook-url
EMAIL_SMTP_SERVER=your-smtp-server
EMAIL_FROM=alerts@yourcompany.com
EMAIL_TO=team@yourcompany.com

# Security Configuration
ENCRYPTION_ENABLED=true
AUDIT_LOGGING_ENABLED=true

# Development Overrides (dev environment only)
# These will override the above settings in development
DEV_OVERLAP_HOURS=72
DEV_LOG_LEVEL=DEBUG
DEV_ENABLE_ALERTS=false
